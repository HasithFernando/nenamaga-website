---
interface Props {
  items: Array<{
    label: string;
    href: string;
  }>;
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <a href="/" class="text-blue-800 hover:text-blue-900 font-medium transition-colors">
        Home
      </a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center space-x-2">
        <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        {index === items.length - 1 ? (
          <span class="text-slate-600 font-medium">{item.label}</span>
        ) : (
          <a href={item.href} class="text-blue-800 hover:text-blue-900 font-medium transition-colors">
            {item.label}
          </a>
        )}
      </li>
    ))}
  </ol>
</nav>
